<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/mainLayout"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:id="@+id/Cocktails"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_margin="20dp"
                android:adjustViewBounds="true"
                android:backgroundTint="@color/grey"
                android:scaleType="fitCenter"
                android:text="Cocktails"
                android:drawableTop="@drawable/ic_drinks"
                android:textColor="@color/black"
                android:onClick="onClick"
                />

            <Button
                android:id="@+id/Games"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_margin="20dp"
                android:adjustViewBounds="true"
                android:backgroundTint="@color/grey"
                android:scaleType="fitCenter"
                android:text="Games"
                android:drawableTop="@drawable/ic_dice"
                android:textColor="@color/black"
                android:onClick="onClick"
                />

            <Button
                android:id="@+id/HelpShake"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_margin="20dp"
                android:adjustViewBounds="true"
                android:backgroundTint="@color/grey"
                android:scaleType="fitCenter"
                android:text="Help and Shake"
                android:drawableTop="@drawable/ic_shake"
                android:textColor="@color/black"
                android:onClick="onClick"
                />

            <Button
                android:id="@+id/addCoktail"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_margin="20dp"
                android:adjustViewBounds="true"
                android:backgroundTint="@color/grey"
                android:scaleType="fitCenter"
                android:text="Share your Coktail !"
                android:drawableTop="@drawable/ic_drinks"
                android:textColor="@color/black"
                android:onClick="onClick"
                />

        </LinearLayout>
    </ScrollView>
</LinearLayout>