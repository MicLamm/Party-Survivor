<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:orientation="vertical">


            <Button
                android:id="@+id/scotchAndWhisky"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="Scotch and whisky"
                android:textColor="@color/black"
                android:backgroundTint="@color/grey"/>

            <Button
                android:id="@+id/liqueurAndCream"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="15dp"
                android:text="Liqueur and Cream"
                android:textColor="@color/black"
                android:backgroundTint="@color/grey"/>

            <Button
                android:id="@+id/gin"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="15dp"
                android:text="Gin"
                android:textColor="@color/black"
                android:backgroundTint="@color/grey"/>

            <Button
                android:id="@+id/rum"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="15dp"
                android:text="Rum"
                android:textColor="@color/black"
                android:backgroundTint="@color/grey"/>

            <Button
                android:id="@+id/vodka"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="15dp"
                android:text="Vodka"
                android:textColor="@color/black"
                android:backgroundTint="@color/grey"/>

            <Button
                android:id="@+id/cognacAndBrandy"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="15dp"
                android:text="Cognac and brandy"
                android:textColor="@color/black"
                android:backgroundTint="@color/grey"/>


            <Button
                android:id="@+id/eauDeVie"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="15dp"
                android:text="Eau de vie"
                android:textColor="@color/black"
                android:backgroundTint="@color/grey"/>

            <Button
                android:id="@+id/tequila"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="15dp"
                android:text="Tequila"
                android:textColor="@color/black"
                android:backgroundTint="@color/grey"/>

            <Button
                android:id="@+id/aniseFlavouredSpirit"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="15dp"
                android:text="Anise-flavoured spirit"
                android:backgroundTint="@color/grey"
                android:textColor="@color/black"/>

            <Button
                android:id="@+id/absinth"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="15dp"
                android:text="Absinth"
                android:backgroundTint="@color/grey"
                android:textColor="@color/black"/>

        </LinearLayout>
    </ScrollView>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/navigation"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="0dp"
        android:layout_marginStart="0dp"
        android:background="#FFBB86FC"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:menu="@menu/bottom_nav_menu"/>

</androidx.constraintlayout.widget.ConstraintLayout>